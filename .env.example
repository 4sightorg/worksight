# WorkSight Environment Configuration

# App Configuration
NEXT_PUBLIC_APP_NAME="WorkSight"
NEXT_PUBLIC_APP_DESCRIPTION="Employee Well-being Analytics Platform"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Database Configuration (replace with your actual database URL)
DATABASE_URL="postgresql://user:password@localhost:5432/worksight"

# Supabase Configuration (REQUIRED)
# Your Supabase project URL (e.g., https://your-project.supabase.co)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url

# Your Supabase anonymous/public API key
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=your_supabase_anon_key

# Development Mode (Optional)
# Set to "true" to enable offline mode (uses test credentials only)
NEXT_PUBLIC_IS_OFFLINE=false

# Server-side offline flag (for server components)
IS_OFFLINE=false

# App URL for metadata and OpenGraph
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Development URL for additional local development (e.g., local network IP)
NEXT_PUBLIC_DEV_URL=http://192.168.1.2:3000

# Authentication
NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# OAuth Providers (optional)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# Monitoring & Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID="your-vercel-analytics-id"
NEXT_PUBLIC_GOOGLE_ANALYTICS="your-ga-tracking-id"

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS="true"
NEXT_PUBLIC_ENABLE_ERROR_REPORTING="false"
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING="true"

# API Configuration
API_BASE_URL="http://localhost:3000/api"
API_TIMEOUT="10000"

# Email Configuration (if needed)
EMAIL_SERVER_HOST="smtp.example.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your-email@example.com"
EMAIL_SERVER_PASSWORD="your-email-password"
EMAIL_FROM="noreply@worksight.com"

# Security
ENCRYPTION_KEY="your-32-character-encryption-key"
JWT_SECRET="your-jwt-secret-key"

# Development
NODE_ENV="development"
NEXT_PUBLIC_DEBUG="false"